<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="158.0" prefWidth="249.0" spacing="5.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.satyam.inventorymanagementsystem.LoginController">
   <children>
      <TextField fx:id="username" maxWidth="200.0" prefHeight="26.0" prefWidth="119.0" promptText="Username">
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="5.0" />
         </VBox.margin>
         <font>
            <Font name="Berlin Sans FB" size="14.0" />
         </font></TextField>
      <PasswordField fx:id="password" maxWidth="200.0" promptText="Password">
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font name="Berlin Sans FB" size="14.0" />
         </font></PasswordField>
      
      <Button fx:id="login" maxWidth="75.0" mnemonicParsing="false" onAction="#login" text="Login" textFill="#47c6d4">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Button>
   </children>
</VBox>
